---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  path: string;
  altText: string;
}

const { path, altText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.{jpeg,jpg,png,gif}"
);
if (!images[path])
  throw new Error(
    `"${path}" does not exist in glob: "src/images/*.{jpeg,jpg,png,gif}"`
  );
---

<Image src={images[path]()} alt={altText} class="photo" />

<style>
  .photo:hover {
    cursor: zoom-in;
  }
</style>
