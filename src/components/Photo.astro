---
import { Image } from "@unpic/astro";

interface Props {
  path: string;
  altText: string;
}

const { path, altText } = Astro.props;
---

<Image src={path} alt={altText} class="photo" />

<style>
  .photo {
    transition-property: filter;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 0.15s;
    filter: brightness(0.9);
  }

  .photo:hover {
    filter: brightness(1);
    cursor: zoom-in;
  }
</style>
